<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.navigation.WinFragment">

    <data>
        <variable
            name="win"
            type="com.example.moneydeath.WinFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/death_win_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you fucking made it g"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/death_win_fragment_points_gained"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/death_win_fragment_points_gained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{win.pointsGained.toString()}"
            app:layout_constraintTop_toBottomOf="@+id/death_win_fragment_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/death_win_fragment_total_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{win.totalPoints.toString()}"
            app:layout_constraintTop_toBottomOf="@+id/death_win_fragment_points_gained"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>